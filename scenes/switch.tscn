code = "shader_type canvas_item;
uniform bool on;
uniform sampler2D emission_texture;

void fragment()
{
	vec4 current_color = texture(TEXTURE, UV);
	vec4 emission_color = texture(emission_texture, UV);
	
	if (emission_color.r > 0f)
	{
		if (on == true)
		{
			vec4 color = vec4(emission_color.r, emission_color.g, emission_color.b, emission_color.a);
			COLOR = (color + vec4(0f, 1f, 0f, 0f))
		}
		else
		{
			COLOR = current_color;
		}
	}
	else
	{
		COLOR = current_color;
	}
	
	
}"

